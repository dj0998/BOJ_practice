import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
   Scanner sc = new Scanner(System.in);

   int x = sc.nextInt();
   int y = sc.nextInt();
   int w = sc.nextInt();
   int h = sc.nextInt();

   int min_a = Math.min((w-x), (h-y));
   int min_b = Math.min(x, y);

   System.out.println(Math.min(min_a, min_b)); 

  } 
}
