import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
   Scanner sc = new Scanner(System.in);

    int num = sc.nextInt();

    if(num == 1) System.out.print("*");
      
    else {
      for(int i = 1; i <= num; i++) {
        if(i % 2 == 1) {
          for(int j = 0; j < num; j++) System.out.print("* ");
        }
        else {
          for(int j = 0; j < num; j++) System.out.print(" *");
        }
        System.out.println();
      }
    }
    
  } 
}
