import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);

    long n = sc.nextLong();
    long sum = 0;

    for(int i = 1; i < n; i++) {   // 나머지와몫이 같은수는 n-1개 이다.
      sum += (n*i)+i;
    }
    System.out.println(sum);
  }
}
