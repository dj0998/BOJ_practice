import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
   Scanner sc = new Scanner(System.in);

    int max = -1;
    int num = 0;

    for(int i = 0; i < 10; i++) {
      int out = sc.nextInt();
      int in = sc.nextInt();
      num = num + in - out;
      if(max < num) max = num;
    }
    System.out.println(max);
  } 
}
