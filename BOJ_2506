import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
   Scanner sc = new Scanner(System.in);
    
    int count = 0;
    int sum = 0;
    int num = sc.nextInt();

    for(int i = 0; i < num; i++) {
      int score = sc.nextInt();
      if(score == 1) {
        count++;
        sum += count;
      }
      else count = 0;
    }
    System.out.println(sum);
  } 
}
